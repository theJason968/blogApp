<%- include("partials/header") %>

<div id="newContainer">
    <h1>Edit <%= blog.title %></h1>
    <form  action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div>
            <label>Title</label>
            <input required class="postContent" type="text" name="blog[title]" placeholder="title" value="<%= blog.title %>">
        </div>
        <div>
            <label>Image</label>
            <input class="postContent" type="text" name="blog[image]" placeholder="image" value="<%= blog.image %>">
        </div>
        <div id="textarea">
            <label>Blog Content</label>
            <textarea required class="postContent" name="blog[body]" id="" cols="30" rows="10" placeholder="blog content here"><%= blog.body %>"</textarea>
            <input class="submit" type="submit" >
        </div>

    </form>
</div>


<%- include("partials/footer") %>